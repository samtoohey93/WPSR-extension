{
  "name": "WP Search & Replace Helper",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Created to help streamline bulk search & replacing for mixed",
  "homepage_url": "https://samtoohey.xyz.com/portfolio/wpsr",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "chrome://favicon/",
    "clipboardRead",
    "clipboardWrite",
    "idle",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}